syntax enable
colorscheme molokai
let g:molokai_original = 1

set tabstop=2
set softtabstop=2
set shiftwidth=2
set number
set expandtab
set showcmd
set cursorline
set wildmenu
set lazyredraw
set showmatch
set incsearch
set hlsearch
set smartcase
set wrap
set smarttab
set ruler
set autoindent
set smartindent
set ttyfast
set autoread
set hid
set scrolloff=3

filetype on
filetype indent on
filetype plugin on
nnoremap <leader><space> :nohlsearch<CR>
